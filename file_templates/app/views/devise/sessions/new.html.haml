.content

  %h2= t('devise.sessions.sign_in')

  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %table
      %tr
        %td= f.label :email
        %td= f.text_field :email
      %tr
        %td= f.label :password
        %td= f.password_field :password
      %tr
        %td
        %td
          - if devise_mapping.rememberable?
            = f.check_box :remember_me
            = f.label :remember_me
      %tr
        %td
        %td= f.submit t('devise.sessions.login')
      %tr
        %td
        %td
          - if @devise_mapping.recoverable? && controller_name != 'passwords'
            = link_to t('devise.passwords.forgot'), new_password_path(resource_name)

      - if devise_mapping.registerable? && controller_name != 'registrations'
        %tr
          %td
          %td
            = link_to t('devise.registrations.dont_have_an_account'), new_registration_path(resource_name)
