.content
  %h2= t('devise.registrations.sign_up')

  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!

    %table
      %tr
        %td= f.label :email
        %td= f.text_field :email
      %tr
        %td= f.label :password
        %td= f.password_field :password
      %tr
        %td= f.label :password_confirmation
        %td= f.password_field :password_confirmation
      %tr
        %td
        %td= f.submit t('devise.registrations.sign_up')
      %tr
        %td
        %td= link_to t('devise.registrations.already_question'), new_user_session_path
