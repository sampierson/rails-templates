%h1= t('navigation.admin.site_settings')
= form_for @settings, :url => admin_settings_path do |f|
  %table.vertical-form
    %tr
      %th
        = t('site_availability.legend')
      %td
        - SiteAvailability.for_select.each do |name, value|
          = f.radio_button :site_availability, value
          = name
          %br
    %tr
      %td
      %td= f.submit t('crud.save')
